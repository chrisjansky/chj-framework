block template-variables
  - var page = {title: "Christian Jánský – Framework", description: "Project starter kit."}

doctype
html.no-js(lang="en")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="ie=edge")
      title!= page.title
      meta(name="description", content=page.description)
      meta(name="viewport" content="width=device-width, initial-scale=1, minimal-ui")

  body
    block template-body

    block template-content
      p Basic template.

    block template-foot
      script(src="http://code.jquery.com/jquery-latest.min.js")

      <!-- build:remove -->
      script window.jQuery || document.write("<script src='../bower_components/jquery/dist/jquery.js'><\/script>")
      <!-- endbuild -->
