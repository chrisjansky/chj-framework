block template-variables
  - var pageSettings = {title: "chj", description: "Starter framework."}

doctype
html.no-js(lang="cs")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
      title!= pageSettings.title
      meta(name="description", content=pageSettings.description)
      meta(name="viewport" content="width=device-width, initial-scale=1.0")

  body
    block template-body

    block template-content
      p Basic template.

    block template-foot
      script(src="http://code.jquery.com/jquery-latest.min.js")

      <!-- build:remove -->
      script window.jQuery || document.write("<script src='../bower_components/jquery/dist/jquery.js'><\/script>")
      <!-- endbuild -->
