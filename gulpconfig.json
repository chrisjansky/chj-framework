{
  "dev": {
    "root": "app/",
    "styleguide": "app/guide/",

    "pagesGlob": "app/**/*.html",
    "pagesIgnore": "!app/{assets,guide}/**/*.html",

    "jadeRoot": "app/assets/jade/",
    "jadeGlob": "app/assets/jade/**/*.jade",
    "jadeIgnore": "!app/assets/jade/**/_*.jade",

    "scssRoot": "app/assets/scss/",
    "scssBase": "app/assets/scss/*.scss",
    "scssGlob": "app/assets/scss/**/*.scss",

    "cssRoot": "app/assets/css/",

    "jsGlob": "app/assets/js/**/*.js",

    "imagesGlob": "app/assets/images/**/*",
    "imagesIgnore": "!app/assets/images/_ignore{,/**}",

    "svgSourceGlob": "app/assets/svg/_source/**/*",
    "svgBuild": "app/assets/svg/_build/",
    "svgBuildGlob": "app/assets/svg/_build/**/*",

    "fallbacks": "app/assets/images/fallbacks/",

    "dataRoot": "app/assets/data/",
    "dataGlob": "app/assets/data/*.json",

    "kssRoot": "app/assets/kss/",
    "kssCss": "app/assets/css/guide.css"
  },
  "dist": {
    "root": "dist/",
    "styleguide": "dist/guide"
  },
  "toMove": [
    "app/assets/fonts/*",
    "!app/assets/**/*.html",
    "app/**/*.html"
  ],
  "injectDev": {
    "site": [
      "bower_components/normalize-css/normalize.css",
      "app/assets/css/style.css"
    ],
    "vendor": [
      "bower_components/modernizr/modernizr.js"
    ],
    "guide": [
      "app/assets/css/guide.css",
      "app/guide/public/prism.css",
      "app/guide/public/prism.js",
      "app/guide/public/guide.js"
    ]
  },
  "injectDist": {
    "site": [
      "dist/assets/css/style-min.css",
      "dist/assets/js/site-min.js"
    ],
    "vendor": [
      "dist/assets/js/vendor-min.js"
    ],
    "guide": [
      "dist/assets/css/guide-min.css",
      "dist/assets/js/guide-min.js"
    ]
  },
