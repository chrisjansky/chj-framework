section(data-name="o-form")
  h1.t-h1 Forms
  form.o-form
    fieldset.o-form__fieldset

      legend.o-form__legend Legend

      table.o-form__table
        tr
          td
            mark.o-note--positive Great success!
          td
            mark.o-note--negative Warning!
        tr
          each instance, index in ["text", "number"]
            td
              div(class="o-field--#{instance}")
                label.o-field__label Label #{index}
                input.o-field__content.o-input(type=instance, placeholder="Value")
                span.o-field__icon.ss-notebook
        tr
          td
            .o-field--radio
              label.o-field__label Select
              .o-field__content
                each instance in ["One", "Two", "Three"]
                  label.o-radio
                    input.o-radio__input(type="radio", name="radio-group")
                    span.o-radio__mark
                    span.o-radio__text= instance
          td
            .o-field--select
              label.o-field__label Select
              .o-select.o-field__content
                select.o-select__content
                  optgroup(label="Group Name")
                  each instance in [1, 2, 3]
                    option Option #{instance}
                span.o-field__icon.ss-navigatedown
        tr
          td(colspan="2")
            textarea.o-textarea(placeholder="Text.")
        tr
          td
            input.o-submit--reset(type="reset", value="Reset")
          td
            input.o-submit(type="submit", value="Submit")