block template-variables
  - var pageSettings = {title: "chj", description: "Framework."}

doctype
html.no-js(lang="cs")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
      title!= pageSettings.title
      meta(name="description", content=pageSettings.description)
      meta(name="viewport" content="width=device-width, initial-scale=1.0")

      <!-- build:css assets/css/style-min.css -->
      link(rel="stylesheet", href="bower_components/normalize-css/normalize.css")
      link(rel="stylesheet", href="bower_components/idangerous-swiper/dist/idangerous.swiper.css")
      link(rel="stylesheet", href="bower_components/featherlight/src/featherlight.css")
      link(rel="stylesheet", href="assets/css/style.css")
      <!-- endbuild -->

  body
    include ../mixins/_dummy

    block template-body
      p Basic template.

    block template-foot
      script(src="http://code.jquery.com/jquery-latest.min.js")

      <!-- build:remove -->
      script window.jQuery || document.write("<script src='bower_components/jquery/dist/jquery.js'><\/script>")
      <!-- endbuild -->

      <!-- build:js assets/js/app-min.js -->
      script(src="bower_components/jquery-easing-original/jquery.easing.1.3.js")
      script(src="bower_components/idangerous-swiper/dist/idangerous.swiper.js")
      script(src="bower_components/featherlight/src/featherlight.js")

      script(src="assets/js/chj-base.js")
      script(src="assets/js/chj-accordion.js")
      script(src="assets/js/chj-carousel.js")
      script(src="assets/js/chj-nav.js")
      script(src="assets/js/chj-slider.js")
      script(src="assets/js/chj-tabs.js")
      script(src="assets/js/chj-toggle.js")
      <!-- endbuild -->
